<Application x:Class="league_mastery_overlay.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:league_mastery_overlay"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <tb:TaskbarIcon x:Key="TrayIcon"
                        IconSource="pack://application:,,,/Resources/icon.ico"
                        ToolTipText="League Mastery Overlay"
                        Visibility="Visible">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Toggle Debug Grid" 
                              Click="ToggleDebugGrid_Click"/>
                    <Separator/>
                    <MenuItem Header="About" 
                              Click="About_Click"/>
                    <MenuItem Header="Exit" 
                              Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Application.Resources>
</Application>
